  .cardBox .card:hover {
    background: #54B435;
  }

  .cardBox .card:hover .numbers,
  .cardBox .card:hover .cardName,
  .cardBox .card:hover .iconBx {
    color: white;
  }
  @media screen and (max-width:480px){
    .card .numbers,.cardName{
