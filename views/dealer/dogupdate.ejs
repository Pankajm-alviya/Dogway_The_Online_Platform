    function validateDogPrice() {
        var name = document.getElementById("Dogiprice");

        if (name.value.trim() === "") {
            document.getElementById("dogpricee").style.color = "red";
            document.getElementById("dogpricee").innerHTML = "Dog price Require";
            return false;
        } else {
            var reg = /^\d+(\.\d{1,2})?$/;
            if (reg.test(name.value)) {
                document.getElementById('dogpricee').style.color = "green";
                document.getElementById("dogpricee").innerHTML = "";
                return true;
            } else {
                document.getElementById('dogpricee').style.color = "red";
                document.getElementById("dogpricee").innerHTML = "Invalid";
                return false;
            }
        }
    }

    function validateDescription() {
        var description = document.getElementById("breedDescriptiondemo");
        if (description.value.trim() === "") {
            document.getElementById("dogdesciption").style.color = "red";
            document.getElementById("dogdesciption").innerHTML = "Description Required";
            return false;
        } else {
            var reg = /^[A-Za-z\s]+$/;
            if (reg.test(description.value)) {
                document.getElementById('dogdesciption').style.color = "green";
                document.getElementById("dogdesciption").innerHTML = "";
                return true;
            } else {
                document.getElementById('dogdesciption').style.color = "red";
                document.getElementById("dogdesciption").innerHTML = "Invalid";
                return false;
            }
        }
    }

    function validateDog() {
        var dogNameValid = validateDogColor();
        var dogWeightValid = validateDogWeight();
        var dogHeightValid = validateDogHeight();
        var descriptionValid = validateDescription();

        return dogNameValid && dogWeightValid && dogHeightValid && descriptionValid;
    }
</script>
