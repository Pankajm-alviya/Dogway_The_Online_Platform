                            <label class="form-check-label" style="margin-left: 7.5rem;" for="Female">Female</label>
                </div>
            </div>
            <div class="mt-2">
                <!-- <img id="updateImg" width="25%" src="<%= data.avtar %>" alt="Current Avatar"> -->
                <input type="file" name="avtar" class="form-control" id="avtar" accept="image/*">
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success" id="btnnn">UPDATE DOG</button>
            </div>
        </form>
    </div>

</body>

</html>

<script>
    function validateDogColor() {
        var name = document.getElementById("color");

        if (name.value.trim() === "") {
            document.getElementById("name").style.color = "red";
            document.getElementById("name").innerHTML = "Name Required";
            return false;
        } else {
            var reg = /^[A-Za-z\s]+$/;
            if (reg.test(name.value)) {
                document.getElementById('name').style.color = "green";
                document.getElementById("name").innerHTML = "";
                return true;
            } else {
                document.getElementById('name').style.color = "red";
                document.getElementById("name").innerHTML = "Invalid name";
                return false;
            }
        }
    }

    function validateDogWeight() {
        var name = document.getElementById("dogweight");

        if (name.value.trim() === "") {
            document.getElementById("dogweigthp").style.color = "red";
            document.getElementById("dogweigthp").innerHTML = "Dog weight Required";
            return false;
        } else {
            var reg = /^\d+(\.\d{1,2})?$/;
            if (reg.test(name.value)) {
                document.getElementById('dogweigthp').style.color = "green";
                document.getElementById("dogweigthp").innerHTML = "";
                return true;
            } else {
                document.getElementById('dogweigthp').style.color = "red";
                document.getElementById("dogweigthp").innerHTML = "Invalid ";
                return false;
            }
        }
    }

    function validateDogHeight() {
        var name = document.getElementById("dogHeight");

        if (name.value.trim() === "") {
            document.getElementById("dogheight").style.color = "red";
            document.getElementById("dogheight").innerHTML = "Dog Height Required";
            return false;
        } else {
