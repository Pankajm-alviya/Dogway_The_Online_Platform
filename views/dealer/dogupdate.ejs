    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        /* Center the modal title */
        .modal-title {
            text-align: center;
            font-weight: bold;
        }

        /* Style the select element */
        #Breed {
            width: 100%;
            border-radius: 2rem;
