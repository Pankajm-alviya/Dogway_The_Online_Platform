            <option value="19 year">19 year</option>
            <option value="20 year">20 year</option> -->


        </select>
            <div class="form-group mt-2">
                <input type="text" class="form-control"  value="<%= data.DogColor %>" id="color"
                    placeholder="Enter Dog Color"  onkeyup="return validateDogColor()" name="DogColor">
                    <p id="name"></p>
            </div>
            <div class="form-group mt-2">
                <input type="text" class="form-control" value="<%= data.DogWeight %>" onkeyup="return validateDogWeight()" id="dogweight"
                    placeholder="Enter Dog Weight" name="DogWeight">
                    <p id="dogweigthp"></p>
            </div>
            <div class="form-group mt-2">
                <input type="text" class="form-control" value="<%= data.DogHeight %>" onkeyup="return validateDogHeight()" id="dogHeight"
                    placeholder="Enter Dog Height" name="DogHeight">
                    <p id="dogheight"></p>
            </div>
            <div class="form-group mt-2">
                <input type="text" class="form-control" value="<%= data.breedDescription %>"  onkeyup="return validateDescription()" id="breedDescriptiondemo"
                    placeholder="Enter Dog Breed Description" name="breedDescription">
                    <p id="dogdesciption"></p>
            </div>
            <div class="d-flex m-2">
                <div class="form-check mt-2">
                    <input class="form-check-input" type="radio" value="Male" name="gender" id="Male" <% if
                        (data.gender==='Male' ) { %>checked<% } %>>
                        <label class="form-check-label" for="Male">Male</label>

                        <!-- <div class="form-check"> -->
                        <input class="form-check-input" type="radio" style="margin-left: 6rem;" value="Female"
