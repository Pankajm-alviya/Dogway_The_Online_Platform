        <hr>
        <form action="/dealer/update/<%= data._id%>"  onsubmit="return validatedog()" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <!-- <label for="DogBreed">Choose Dog Breed:</label> -->
                <select name="DogBreed" id="Breed" class="form-control">
                    <option value="Germen Shepherd"><%=data.DogBreed%></option>
                    <option value="Germen Shepherd">Germen Shepherd</option>
                    <option value="Pug">Pug</option>
                    <option value="Boxer">Boxer</option>
                    <option value="Miltese">Miltese</option>
                    <option value="Akita">Akita</option>
                    <option value="Beagle">Beagle</option>
                    <option value="Golden Retriever">Golden Retriever</option>
