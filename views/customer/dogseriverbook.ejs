  <script>

    
    function Dogname() {
        var name = document.getElementById("dogname");

        if (name.value.trim() === "") {
            document.getElementById("dogid").style.color = "red";
            document.getElementById("dogid").innerHTML = "Dog Name Required";
            return false;
        } else {
            var reg = /^[A-Za-z\s]+$/;
            if (reg.test(name.value)) {
                document.getElementById('dogid').style.color = "green";
                document.getElementById("dogid").innerHTML = "";
                return true;
            } else {
                document.getElementById('dogid').style.color = "red";
