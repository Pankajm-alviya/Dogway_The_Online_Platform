    <script>
        function validnameService() {
            var name = document.getElementById("login_ServiesPname");
            if (name.value.trim() == "") {
                document.getElementById("name1").style.color = "red";
                document.getElementById("name1").innerHTML = "Name Required";
                return false
            }
            else {
                var reg = /^[A-Za-z\s]+$/;
                if (reg.test(name.value)) {
                    document.getElementById('name1').style.color = "green";
                    document.getElementById("name1").innerHTML = "Valid name";
                    return true
                }
                else {
                    document.getElementById('name').style.color = "red";
                    document.getElementById("name").innerHTML = "Invalid name";
                    return false;
                }
            }
        }

        function validemailService() {
            var email = document.getElementById("login_ServiesPemail");
            if (email.value.trim() == "") {
                document.getElementById("email1").style.color = "red";
                document.getElementById("email1").innerHTML = "Email Required";
                return false;
            }
            else {
                var reg = /^\w+([\.-])?\w*@[a-z]*([\.][a-z]{2,3})+$/;
                if (reg.test(email.value)) {
                    document.getElementById("email1").style.color = "green";
                    document.getElementById("email1").innerHTML = "Valid Email";
                    return true;
                }
                else {
                    document.getElementById("email1").style.color = "red";
                    document.getElementById("email1").innerHTML = "Invalid email";
                    return false;
                }
            }
        }

        function validAddhar() {
            var name = document.getElementById("login_ServiesPaddres");
            if (name.value.trim() == "") {
                document.getElementById("address").style.color = "red";
                document.getElementById("address").innerHTML = "Address Required";
                return false
            }
            else {
                var reg = /^[A-Za-z0-9\s,.-_;''""/]+$/;
                if (reg.test(name.value)) {
                    document.getElementById('address').style.color = "green";
                    document.getElementById("address").innerHTML = "Valid Address";
                    return true
                }
                else {
                    document.getElementById('address').style.color = "red";
                    document.getElementById("address").innerHTML = "Invalid Address";
                    return false;
                }
            }
        }
        function validexperience() {
            var name = document.getElementById("login_ServiesPexpirence");
            if (name.value.trim() == "") {
                document.getElementById("experience").style.color = "red";
                document.getElementById("experience").innerHTML = "experience Required";
                return false
            }
            else {
                var reg = /^[0-9][A-Za-z\s]+$/;
                if (reg.test(name.value)) {
                    document.getElementById('experience').style.color = "green";
                    document.getElementById("experience").innerHTML = "Valid experience";
                    return true
