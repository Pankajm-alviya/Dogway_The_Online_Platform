                    return false;
                }
            }
        }
        function validpancard() {
            console.log("Enter country");
            var name = document.getElementById("login_ServiesPpancard");


            if (name.value.trim() == "") {
                document.getElementById("pancard").style.color = "red";
                document.getElementById("pancard").innerHTML = "PanCard No. Required";
                return false
            }
            else {
                var reg = /^[A-Z]{5}[0-9]{4}[A-Z]{1}$/;
                if (reg.test(name.value)) {
                    document.getElementById('pancard').style.color = "green";
                    document.getElementById("pancard").innerHTML = "Valid PanCard No.";
                    return true
                }
                else {
                    document.getElementById('pancard').style.color = "red";
                    document.getElementById("pancard").innerHTML = "Invalid PanCard No.";
                    return false;
                }
            }
        }
        function validpass() {
            console.log("Enter pass");
            var password = document.getElementById("login_ServiesPpass");
            if (password.value.trim() == "") {
                document.getElementById("password").style.color = "red";
                document.getElementById("password").innerHTML = "Password Required";
                return false;
            }
            else {
                var reg = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$/;
                if (reg.test(password.value)) {
                    document.getElementById("password").style.color = "green";
                    document.getElementById("password").innerHTML = "Valid Password";
                    return true;
                }
                else {
                    document.getElementById("password").style.color = "red";
                    document.getElementById("password").innerHTML = "Invalid Password";
                    return false;
                }
            }
        }

        function validcontactService() {
            var mobile = document.getElementById("login_ServiesPcontact");
            if (mobile.value.trim() == "") {
                document.getElementById("contact1").style.color = "red";
                document.getElementById("contact1").innerHTML = "Mobile Number Required";
