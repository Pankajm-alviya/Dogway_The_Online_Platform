<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
  <script src="https://code.jquery.com/jquery-3.7.0.min.js"
    integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=" crossorigin="anonymous"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  <title>Admin Dashboard</title>
  <title>Document</title>
  <style>
   
        

        @media (max-width:700px) {
            #dashboard {
                margin-left: 0px;
            }
        }
  </style> 
  <script>
    $(document).ready(function () {
      $("#myTable").DataTable();
    });
  </script>
  

</head>

<body style="color:black">
  <%-include('../partials/adminNavbar.ejs')%>
  <div id = "dashboard">
    <hr>
     <center><h2 style="color: black;">View Customer</h2></center>
     <hr>
    <div class="table-responsive" style="margin-top: 30px;width: 70rem;">
        <table class="table table-striped table-bordered" id="myTable">
      <thead>
        <tr>
          <th>Name</th>
          <th>Contact No.</th>
          <th>Address</th>
          <th>Email</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% item.forEach((user)=> { %>
          <tr >
            <td>
              <%= user.CName %>
            </td>
            <td>
              <%= user.CContact %>
            </td>
            <td>
              <%= user. CCity %>,<%= user.CState %>,<%= user.CCountry %>
            </td>
            <td>
              <%= user.CEmail %>
            </td>
            <td>            <!-- <td><button class="btn" style="background-color: #54B435;"><a
                  href="/admin/deactivateUser/<%= user.CEmail%>">Deactivate</a></button></td> -->
                  <%console.log(user)%>
                  <form action="/admin/deactivateUser/<%= user.CEmail%>">
                    <div class="form-check form-switch">
                        <input style="background-color: #54B435;" class="btn" type="submit"
                            <%=user.status=='Deactivate' ? 'value = Activate' : 'value = Deactivate' %>>
                    </div>
                </form>
</td>
          </tr>
          <%})%>
      </tbody>
    </table>
  </div>
  
    </div>
   
</body>

</html>